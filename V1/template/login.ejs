<%- include('header.ejs')%>
<%- include('flash.ejs')%>

    <title>Login | LaudedArts</title>
    <style>
        .form-control:focus
        {
            border-color: inherit;
            -webkit-box-shadow: none;
            box-shadow: none;
        }

        .login
        {
            background: url("/image/loginn.png");
            background-repeat: no-repeat;
        }
    </style>
</head>

<body style="background-color: ghostwhite;">
    <div class="container">
        <div class="container my-5 shadow">
            <div class="row">
                <div class="col-lg-6 col-md-10 col-sm-12 login pt-5">
                    <h3 class="text-dark px-3">Sign in
                        <a href="/Template/index"><span class="h6 float-right text-dark">Home <i class="bi bi-arrow-right"></i></span></a>
                    </h3>

                    <form class="my-4 mx-5 text-dark" method='POST' action="/User/login">   
                        <div class="form-outline px-5 mb-4">
                            <label class="form-label font-weight-bold" for="email">Email</label>
                             
                            <span class='text-danger'>   
                                 <i> <small></small> </i>                                      
                            </span>
                           
                            <input type="email" id="email" class="form-control" placeholder="Email address" name='email' required />

                        </div>
                        <div class="form-outline px-5 mb-4">
                            <label class="form-label font-weight-bold" for="password">Password</label>
                            <input type="password" id="password" name="password" placeholder="Password"
                                class="form-control" required />

                        </div>

                        <div class="text-center px-5 pt-1 pb-1">
                            <button id='loginbtn' class="btn round btn-primary btn-block fa-lg gradient-custom-2 mb-1" type="submit">
                                <span id='login'>Log in</span>
                                
                            </button>
                            <div>
                                <span><a class="text-white bg-danger float-right" href="/Template/changePassword">Forgot password?</a></span>
                            </div>
                            <div class="text-center mt-4">
                                <div class="font-weight-bold text-dark ml-5 pl-5">OR</div>
                                <a class="btn rounded-circle" href="/auth/facebook">
                                    <img src="/image/fb.webp" class="rounded-circle" height="35px" width="35px">
                                </a>
                                <a class="btn rounded-circle " href="/auth/google">
                                    <img src="/image/google.png" class="rounded-circle" height="45px" width="45px">
                                </a>
                            </div>
                            
                            
                        </div>

                        <div class=" mt-3 justify-content-center">
                            <div class="text-center">
                                <p class="mb-2"> <span class="text-white bg-danger">Don't have an account?</span></p>
                            </div>
                            <div class="text-center">
                                <a href="/Template/register" class="btn btn-primary">Create new</a>
                            </div>
                        </div>

                    </form>

                    
                </div>
                <div class="col-md-6" style="background-image: url('/image/login.jpeg'); background-repeat: no-repeat;">

                </div>
            </div>
        </div>
    </div>
</body>
</html>
