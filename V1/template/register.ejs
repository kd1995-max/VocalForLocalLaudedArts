<%- include('header.ejs')%>
<%- include('flash.ejs')%>

  <title>SignUp | LaudedArts</title>
  <style>
    .form-control:focus
    {
      border-color: inherit;
      -webkit-box-shadow: none;
      box-shadow: none;
    }

    .login
    {
      background: url('/image/loginn.png');
      background-repeat: no-repeat;
    }
  </style>
</head>

<body style="background-color: ghostwhite">
  <div class="container">
    <div class="container my-5 shadow">
      <div class="row">
        <div class="col-lg-6 col-md-10 col-sm-12 login pt-5">
          <h3 class="text-dark px-3">
            Sign Up
            <a href="/Template/index"><span class="h6 float-right text-dark">Home <i class="bi bi-arrow-right"></i></span></a>
          </h3>
          
          <form class="my-4 mx-5 text-dark" method="POST" action="/User/save">
            <div class="form-outline px-5 mb-2">
              <label class="form-label font-weight-bold" for="username">Username</label>
             
                            <span class='text-danger'>   
                                 <i> <small></small> </i>                                      
                            </span>
                            
              <input type="text" id="username" class="form-control" placeholder="Username" name="name" required />
              
            </div>

            <div class="form-outline px-5 mb-2">
              <label class="form-label font-weight-bold" for="email">Email</label>
             
                            <span class='text-danger'>   
                                 <i> <small></small> </i>                                      
                            </span>
                            
              <input type="email" id="email" class="form-control" placeholder="Email address" name="email" required />
            </div>
            <div class="form-outline px-5 mb-2">
              <label class="form-label font-weight-bold" for="phone">Password</label>
             
                            <span class='text-danger'>                                
                                    <i> <small></small> </i>    
                            </span>
             
              <input type="password" id="password" class="form-control" placeholder="Password" name="password" required />
            </div>

            <div class="form-outline px-5 mb-2">
              <label class="form-label font-weight-bold" for="cpassword">Confirmation</label>
              <input type="password" id="cpassword"  placeholder="Confirm Password" class="form-control"
                name="cpassword" required />
                
            </div>

            <div class="text-center px-5 pt-3 pb-1">
              <button id='signupbtn' class="btn round btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">
               <span id='signup'>Sign up</span>
              </button>
            </div>

            <div class="text-dark mt-3 justify-content-center">
              <div class="text-center">
                <p class="mb-2">Already have an account?</p>
              </div>
              <div class="text-center">
                <a href="/Template/login" class="btn btn-outline-success ">
                  Sign in here
                </a>
              </div>
            </div>
          </form>
        </div>
        <div class="col-md-6" style="
              background-image: url('/image/signupp.jpg' );
              background-repeat: no-repeat;
            "></div>
      </div>
    </div>

    
  </div>


</body>

</html>
